<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.crazycatlady.zorpix.spoilersaver" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddShow"
            android:label="@string/title_activity_add_show" >
        </activity>
        <activity
            android:name=".AddWatcher"
            android:label="@string/title_activity_add_watcher" >
        </activity>
        <activity
            android:name=".ChangeEpisode"
            android:label="@string/title_activity_change_episode" >
        </activity>
    </application>

</manifest>
