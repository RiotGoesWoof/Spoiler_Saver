<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.crazycatlady.zorpix.spoilersaver.ChangeEpisode"
    android:background="#ffe12638">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinIt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"
        android:background="#949481" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spintastic"
        android:layout_below="@+id/spinIt"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Which Episode are they on?"
        android:id="@+id/textView7"
        android:layout_below="@+id/spintastic"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="#003333" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newEp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Episode"
        android:id="@+id/update"
        android:layout_below="@+id/newEp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="updateEp"/>
</RelativeLayout>
